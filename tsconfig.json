{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@/*": ["client/src/*"] }
  },
  "include": [
    "server/**/*.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "client/**/*.ts",
    "client/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
